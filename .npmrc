# Package Manager Configuration
package-manager=pnpm

# NPM Registry configuration
registry=https://registry.npmjs.org/

# Package access
access=public

# Save exact versions
save-exact=true

# Engine strict
engine-strict=true

# PNPM specific configurations
strict-peer-dependencies=true
prefer-offline=true
package-manager-strict=false

# Optional: Auto-install peer dependencies (npm 7+)
auto-install-peers=true

# Optional: Legacy peer deps (if needed for compatibility)
# legacy-peer-deps=true
